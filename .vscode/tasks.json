{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成活动文件",
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe", // ← 改为 gcc.exe
            "args": [
                "-fdiagnostics-color=always",
                "-std=c99", // ← 显式指定 C99
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "使用 GCC 编译 C 文件"
        }
    ],
    "version": "2.0.0"
}